<html>
 <head>
  <title>Test Page for URL Building</title>
  <script language="javascript" src="../lib/jsUnitCore.js"></script>
  <script language="javascript" src="../lib/jquery-1.3.2.js"></script>
  <script language="javascript" src="../src/jquery-twitter.js"></script>
  <style type="text/css">
	.foo{
		background:#555;
		border: 1px solid #000;
		color: #fff;
		font-weight:bold;
		padding: 5px; margin: 5px;
	}
 </style>
  <script language="javascript">
    $(function(){
		var search_term = 'wow';
		$.twitter.liveSearch(search_term, {rpp:1}, function(resp){
			$(resp.results).each(function(){
				$('#box1 div:gt(5)').each(function(){
					$(this).fadeOut('slow');
				});
				$('#box1').prepend('<div class="foo" id="'+this.id+'"><sup>'+this.id+'</sup><p>'+this.text+'</p></div>');
				$('#'+this.id).hide();
				$('#'+this.id).fadeIn('slow');
			});
		});
		
		$('a').click(function(){
			var event = jQuery.Event('twitter:'+$(this).attr('href'));
			event.term = search_term;
			$().trigger(event);
			return false;
		});
	});
  </script>

 </head>
 <body>
	
  <table width="100%">
	<tr>
		<td>
		  <a href="pause">Pause</a>
		</td>
		<td>
		  <a href="play">Play</a>
		</td>
	</tr>
  </table>
  
  <div id="box1" style="width: 50%; border: 1px solid #000;margin: 0px auto;">
  	
  </div>


  </div>
 </body>
